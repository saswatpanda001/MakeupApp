<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MakeupShopApp.Views.ManageProduct.OrdersPage">
    <ContentPage.Content>

        <StackLayout Padding="10">

            <Button Text="🏠 Home"
                    BackgroundColor="Transparent"
                    TextColor="#007AFF"
                    FontSize="16"
                    HorizontalOptions="Start"
                    Clicked="OnHomeClicked"/>
            
            
            <Label Text="My Orders"
           FontSize="28"
           FontAttributes="Bold"
           HorizontalOptions="Center"
           Margin="0,10" />

            <ListView x:Name="OrdersListView"
              ItemSelected="OnOrderSelected"
              SeparatorVisibility="Default"
              HasUnevenRows="True">
                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Frame Padding="20"
                           CornerRadius="10"
                           Margin="0,5"
                           BackgroundColor="#f0f0f0"
                           BorderColor="#d3d3d3">

                                <Frame BorderColor="#CCCCCC" CornerRadius="15" Padding="15" Margin="15" BackgroundColor="#FDF6FF">
                                    <StackLayout Orientation="Vertical" Spacing="12">

                                        <!-- Header with a text-based logo -->
                                        <Label Text="🛍️ DollUp Order Summary" 
               FontSize="20" 
               FontAttributes="Bold" 
               TextColor="#8E44AD" 
               HorizontalOptions="Center" />

                                        <Label Text="🆔 Order ID: {Binding OrderId}" 
               FontSize="16" 
               TextColor="#2C3E50" />

                                        <Label Text="📅 Date: {Binding OrderDate, StringFormat='{0:dd/MM/yyyy}'}" 
               FontSize="14" 
               TextColor="#555" />

                                        <Label Text="💰 Total: ₹{Binding TotalAmount, StringFormat='{0:F2}'}" 
               FontSize="14" 
               TextColor="Green" />

                                        <Label Text="📦 Status: {Binding Status}" 
               FontSize="14" 
               TextColor="#007ACC" />

                                        <Label Text="👤 Name: {Binding Name}" 
               FontSize="14" 
               TextColor="#333" />

                                        <Label Text="🏠 Address: {Binding Address}" 
               FontSize="14" 
               TextColor="#555" />

                                        <Label Text="📞 Contact: {Binding Number}" 
               FontSize="14" 
               TextColor="#990000" />

                                        <Label Text="💳 Payment: {Binding PaymentMethod}" 
               FontSize="14" 
               TextColor="#228B22" />

                                    </StackLayout>
                                </Frame>


                            
                            
                            </Frame>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>





    </ContentPage.Content>
</ContentPage>