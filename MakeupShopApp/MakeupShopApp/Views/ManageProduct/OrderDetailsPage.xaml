<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MakeupShopApp.Views.ManageProduct.OrderDetailsPage">
    <ContentPage.Content>

        <StackLayout BackgroundColor="#f5f5f5">

            <Button Text="🏠 Orders"
                    BackgroundColor="Transparent"
                    TextColor="#007AFF"
                    FontSize="16"
                    HorizontalOptions="Start"
                    Clicked="OnHomeClicked"/>
            
            <Label Text="Order Details"
           FontSize="28"
           FontAttributes="Bold"
           HorizontalOptions="Center"
           TextColor="#333"
           Margin="0,20,0,10"/>

            <ListView x:Name="OrderDetailsListView"
              SeparatorVisibility="None"
              Margin="10"
              HasUnevenRows="True">

                <ListView.ItemTemplate>
                    <DataTemplate>
                        <ViewCell>
                            <Frame BackgroundColor="#ffffff"
                           BorderColor="#ccc"
                           CornerRadius="15"
                           Padding="20"
                           Margin="0,10"
                           HasShadow="True">

                                <StackLayout Orientation="Vertical" Spacing="10">
                                    <Frame BorderColor="#CCCCCC" CornerRadius="15" Padding="15" Margin="10" BackgroundColor="#F0F8FF">
                                        <StackLayout Orientation="Vertical" Spacing="10">

                                            <!-- Product Name -->
                                            <Label Text="🧸 {Binding Product.ProductName}"
               FontSize="18"
               FontAttributes="Bold"
               TextColor="#007acc" />

                                            <!-- Quantity -->
                                            <Label Text="🔢 Quantity: {Binding Quantity}"
               FontSize="16"
               TextColor="#666" />

                                            <!-- Price -->
                                            <Label Text="💵 Price: ₹{Binding Price, StringFormat='{0:F2}'}"
               FontSize="16"
               TextColor="#28a745" />

                                        </StackLayout>
                                    </Frame>
                                </StackLayout>

                            </Frame>
                        </ViewCell>
                    </DataTemplate>
                </ListView.ItemTemplate>
            </ListView>
        </StackLayout>


    </ContentPage.Content>
</ContentPage>