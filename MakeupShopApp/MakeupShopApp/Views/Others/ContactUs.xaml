<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MakeupShopApp.Views.Others.ContactUs">
    <ContentPage.Content>

        <ScrollView>
            <StackLayout Padding="20" Spacing="20">

                <!-- Header Section -->
                <Frame CornerRadius="15" BackgroundColor="#FFD1DC" Padding="20">
                    <StackLayout>
                    <Label Text="Get In Touch 💖"
                       FontSize="28"
                       FontAttributes="Bold"
                       TextColor="#D63384"
                       HorizontalOptions="Center" />
                    <Label Text="We're here to help! Feel free to reach out to us with any questions or feedback."
                       FontSize="16"
                       HorizontalOptions="Center"
                       TextColor="#6D214F"/>
                    </StackLayout>
                </Frame>

                <!-- Contact Details Section -->
                <Frame CornerRadius="15" BackgroundColor="#FFE4E1" Padding="20">
                    <StackLayout>
                        <Label Text="📧 Email Us"
                       FontSize="22"
                       FontAttributes="Bold"
                       TextColor="#C71585"/>
                    <Label Text="support@dollup.com"
                       FontSize="16"
                       TextColor="#6D214F"/>

                    <Label Text="📞 Call Us"
                       FontSize="22"
                       FontAttributes="Bold"
                       TextColor="#C71585"
                       Margin="20,10,0,0"/>
                    <Label Text="+123 456 7890"
                       FontSize="16"
                       TextColor="#6D214F"/>

                    <Label Text="📍 Visit Us"
                       FontSize="22"
                       FontAttributes="Bold"
                       TextColor="#C71585"
                       Margin="20,10,0,0"/>
                    <Label Text="123 Glam Street, Beauty City, BL 45678"
                       FontSize="16"
                       TextColor="#6D214F"/>
            </StackLayout>
            </Frame>




                <!-- Social Media Section -->
                <Frame BackgroundColor="#F8EAFD" CornerRadius="15" Padding="20" Margin="20">
                    <StackLayout Spacing="20" HorizontalOptions="Center">
                        <Label Text="Follow Dollup on Social Media"
               FontSize="20"
               FontAttributes="Bold"
               TextColor="#9B59B6"
               HorizontalOptions="Center" />

                        <StackLayout Orientation="Horizontal" HorizontalOptions="Center" Spacing="30">
                            <StackLayout Spacing="5" HorizontalOptions="Center">
                                <Image Source="instagram_icon.png"
                       HeightRequest="50"
                       WidthRequest="50"
                       BackgroundColor="#E1306C"
                      />
                                <Label Text="@dollup_beauty" FontSize="14" TextColor="#8E44AD" HorizontalOptions="Center"/>
                            </StackLayout>

                            <StackLayout Spacing="5" HorizontalOptions="Center">
                                <Image Source="facebook_icon.png"
                       HeightRequest="50"
                       WidthRequest="50"
                       BackgroundColor="#3B5998"
                        />
                                <Label Text="/dollupofficial" FontSize="14" TextColor="#8E44AD" HorizontalOptions="Center"/>
                            </StackLayout>

                            <StackLayout Spacing="5" HorizontalOptions="Center">
                                <Image Source="twitter_icon.png"
                       HeightRequest="50"
                       WidthRequest="50"
                       BackgroundColor="#1DA1F2"
                        />
                                <Label Text="@dollupbuzz" FontSize="14" TextColor="#8E44AD" HorizontalOptions="Center"/>
                            </StackLayout>
                        </StackLayout>
                    </StackLayout>
                </Frame>

            </StackLayout>
        </ScrollView>
        
        
    </ContentPage.Content>
</ContentPage>